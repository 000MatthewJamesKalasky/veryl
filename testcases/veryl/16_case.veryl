module Module16 {
    var a: logic;
    let x: logic = 1;
    let y: logic = 1;

    always_comb {
        case x {
            0: a = 1;
            1: a = 1;
            2: {
                   a = 1;
                   a = 1;
                   a = 1;
               }
            3, 4   : a = 1;
            y - 1  : a = 1;
            default: a = 1;
        }
    }
}
