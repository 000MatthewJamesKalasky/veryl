{
  "name": "vscode-veryl",
  "displayName": "vscode-veryl",
  "description": "",
  "version": "0.0.1",
  "publisher": "dalance",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dalance/veryl.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:veryl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-veryl.restartServer",
        "title": "Restart language server",
        "category": "vscode-veryl"
      }
    ],
    "configuration": [
      {
        "title": "Veryl Language Server",
        "properties": {
          "vscode-veryl.verylLsBinary.path": {
            "scope": "window",
            "type": "string",
            "default": "veryl-ls",
            "markdownDescription": "Specify veryl-ls binary path."
          }
        }
      }
    ],
    "languages": [
      {
        "id": "veryl",
        "aliases": [
          "Veryl",
          "veryl"
        ],
        "extensions": [
          ".vl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "veryl",
        "scopeName": "source.veryl",
        "path": "./syntaxes/veryl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
